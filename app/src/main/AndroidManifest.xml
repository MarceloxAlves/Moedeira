<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.marcelo.moedeira">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".app.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Arrecadacao"
            android:label="Arreacadação"
            android:parentActivityName=".app.MainActivity" />
        <activity
            android:name=".app.JogosActivity"
            android:label="Jogos"
            android:parentActivityName=".app.MainActivity" />
        <activity android:name=".app.CursoActivity"
            android:label="Cursos"
            android:parentActivityName=".app.MainActivity"  />
        <activity
            android:name=".app.ArtigosActivity"
            android:label="Artigos"
            android:parentActivityName=".app.MainActivity" />
        <activity
            android:name=".app.ProjetosActivity"
            android:label="Projetos"
            android:parentActivityName=".app.MainActivity"  />
        <activity android:name=".app.SobreActivity"
            android:parentActivityName=".app.MainActivity" />
        <activity android:name=".app.NoticiasActivity"
            android:label="Noticias"
            android:parentActivityName=".app.MainActivity" />
    </application>

</manifest>